{
  "name": "weatherstation-web-template",
  "version": "0.1.0",
  "description": "Template for the web part of the weather station. Based on NodeJS and TypeScript.",
  "repository": {
    "type": "git",
    "url": "https://github.engineering.zhaw.ch/Vorpraktikum-IT/Projekt-Vorlage"
  },
  "author": "Andreas Ahlenstorf",
  "license": "Apache-2.0",
  "scripts": {
    "build": "npm run clean && npm run transpile && npm run create_views && npm run create_public && npm run copy_views && npm run copy_public",
    "clean": "[ -d ./dist ] && echo 'web/dist exists' && npm run delete_dist || echo 'ERROR: web/dist does not exist'",
    "copy_public": "cp -r ./public/* ./dist/web/public && echo 'successfully copied ./web/public into ./web/dist/web/public'",
    "copy_views": "cp -r ./views/* ./dist/web/views && echo 'successfully copied ./web/views into ./web/dist/web/src/views'",
    "create_public": "mkdir ./dist/web/public && echo 'successfully created ./web/dist/web/public' || echo './dist/web/public already exists'",
    "create_views": "mkdir ./dist/web/views && echo 'successfully created ./web/dist/web/views' || echo '.dist/web/views already exists'",
    "delete_dist": "rm -r ./dist && echo 'successfully deleted ./web/dist' && cd ../sensors && rm -r ./dist && echo 'successfully deleted ./sensors/dist'",
    "start": "node dist/web/src/server.js",
    "transpile": "tsc && echo 'successfully transpiled web' && cd ../sensors && tsc && echo 'successfully transpiled sensors'"
  },
  "dependencies": {
    "@types/bcrypt": "3.0.0",
    "@types/body-parser": "1.19.0",
