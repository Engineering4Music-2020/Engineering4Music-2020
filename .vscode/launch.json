	"version": "0.2.0",
	"configurations": [

	{
		"name": "Launch Chrome",
		"request": "launch",
		"type": "pwa-chrome",
		"url": "http://localhost:3000/loginForm",
		"webRoot": "${workspaceFolder}"
	},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach by Process ID",
			"processId": "${command:PickProcess}",
			"protocol": "inspector"
		}
	]
}
